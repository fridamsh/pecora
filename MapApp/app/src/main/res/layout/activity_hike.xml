<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn_center_map"
        android:src="@drawable/icon_mylocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:contentDescription="@string/bt_center_map_description"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn_new_point"
        android:src="@drawable/icon_new"
        android:layout_below="@+id/imgBtn_center_map"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:contentDescription=""
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn_new_observation"
        android:src="@drawable/icon_sheep"
        android:layout_below="@+id/imgBtn_new_point"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:contentDescription=""
        android:cropToPadding="true"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn_stop_hike"
        android:src="@drawable/icon_stop_hike"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#00ffffff"
        android:cropToPadding="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_marker_cross"
        android:src="@drawable/icon_marker_orange_small"
        android:layout_above="@+id/img_cross"
        android:layout_marginBottom="3dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_cross"
        android:src="@drawable/icon_cross"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/frame_layout_1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velg punkt"
                android:textSize="9pt"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom og panorer for Ã¥ justere"
                android:textSize="7pt"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />
        </LinearLayout>

    </FrameLayout>

    <TableLayout
        android:id="@+id/table_btns"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_observation_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Avbryt"/>
            <Button
                android:id="@+id/btn_observation_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Ok"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>