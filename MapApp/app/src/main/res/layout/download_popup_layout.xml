<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navn på kart:"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"/>
    <EditText
        android:id="@+id/editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Min zoom level:"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlack"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:layout_column="0"
                android:id="@+id/seekBar_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/label_number_min"
                android:layout_column="1"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max zoom level:"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlack"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:layout_column="0"
                android:id="@+id/seekBar_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/label_number_max"
                android:layout_column="1"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/label_tiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50 tiles å laste ned"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

</LinearLayout>